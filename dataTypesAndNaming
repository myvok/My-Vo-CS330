// Naming conventions and data types in JavaScript

// Primitive data types:
let age = 25;            // number (int)
let pi = 3.14;           // number (float)
let firstName = "John";  // string
let isStudent = true;    // boolean

// Array
let scores = [85, 90, 78]; // array

// Object (dictionary-like structure)
let student = {
    name: "John",
    age: 25,
    isEnrolled: true
};

// Output types
console.log(typeof age);         // number
console.log(typeof pi);          // number
console.log(typeof firstName);   // string
console.log(typeof isStudent);   // boolean
console.log(typeof scores);      // object (arrays are special types of objects)
console.log(typeof student);     // object

// Mixed type operation example:
let result = "Score: " + 95; // String concatenation
console.log(result); // Output: "Score: 95"

// Operations between number types:
let sum = age + pi;          // Can add int and float (result is a float)
console.log(sum);            // Output: 28.14

// Conversions:
let stringNumber = "100";
let convertedNumber = Number(stringNumber); // String to number conversion
console.log(convertedNumber + 1); // Output: 101

// Adding strings and numbers:
let x = "5" + 6; // Implicit conversion
console.log(x);  // Output: "56" (string)

// Explicit conversion
let y = Number("5") + 6;
console.log(y);  // Output: 11
